{
    "name": "sandwicher/laravel-app",
    "description": "A project to test some development concepts - Laravel App",
    "version": "1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo Fusco",
            "email": "ricardo.fusco2@gmail.com"
        }
    ],
    "config": {
        "bin-dir": "bin/",
        "platform": {
            "php": "8.0.0"
        }
    },
    "require": {
        "php": "8.0.0",
        "sandwicher/domain": "1.0",
        "laravel/framework": "8.28.1",
        "laravel/laravel": "8.5.10"
    },
    "autoload": {
        "psr-4": {
            "Sandwicher\\Application\\": "src/"
        }
    },
    "require-dev": {
        "behat/behat": "3.8.1",
        "phpunit/phpunit": "9.5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "AcceptanceTest\\": "test/acceptance/",
            "UnitTest\\": "test/unit/"
        }
    },
    "scripts": {
        "test": [
            "@unitTest",
            "@acceptanceTest"
        ],
        "unitTest": "bin/phpunit --configuration config/unit-test.xml --log-junit test/reports/unitReport.xml",
        "acceptanceTest": "bin/behat --config config/acceptance-test.yml -f pretty -o std -f junit --out test/reports"
    }
}
